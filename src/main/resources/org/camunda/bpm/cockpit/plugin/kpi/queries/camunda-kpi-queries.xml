<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cockpit.kpi">
   <resultMap id="processInstanceDetail" type="org.camunda.bpm.cockpit.plugin.kpiOverview.dto.ProcessInstanceDetailsDto">
   <result property="processInstanceId" column="PROC_INST_ID_" />
    <result property="definitionId" column="PROC_DEF_ID_" />
    <result property="startTime" column="START_TIME_" />
    <result property="endTime" column="END_TIME_" />
  </resultMap>

  <select id="selectProcessInstanceDetails" parameterType="java.util.Map" resultMap="processInstanceDetail">
SELECT
	PROC_INST_ID_, PROC_DEF_ID_, START_TIME_, END_TIME_
FROM
	ACT_HI_PROCINST
WHERE
	PROC_INST_ID_ = #{parameter.processInstanceId}
  </select>

  <resultMap id="processDefinitionHistoryDetail" type="org.camunda.bpm.cockpit.plugin.kpiOverview.dto.ProcessDefinitionHistoryDetailsDto">
  <result property="processInstanceId" column="PROC_INST_ID_" />
   <result property="definitionId" column="PROC_DEF_ID_" />
   <result property="startTime" column="START_TIME_" />
   <result property="endTime" column="END_TIME_" />
 </resultMap>

 <select id="selectProcessDefinitionHistoryDetails" parameterType="java.util.Map" resultMap="processDefinitionHistoryDetail">
SELECT
 PROC_INST_ID_, PROC_DEF_ID_, START_TIME_, END_TIME_
FROM
 ACT_HI_PROCINST
WHERE
 PROC_DEF_ID_ = #{parameter.processDefinitionId} AND
 END_TIME_ IS NOT null
 </select>
</mapper>
